<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">product_kit_suggester_form.product_kit_suggester_form_data_source</item>
            <item name="deps" xsi:type="string">product_kit_suggester_form.product_kit_suggester_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Filters</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">product_kit_suggester_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Mirasvit\ProductKit\Ui\Suggester\Form\Control\BackButton</item>
        </item>
    </argument>

    <dataSource name="product_kit_suggester_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Mirasvit\ProductKit\Ui\Suggester\Form\DataProvider</argument>
            <argument name="name" xsi:type="string">product_kit_suggester_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">kit_id</argument>
            <argument name="requestFieldName" xsi:type="string">kit_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="product_kit/kit/generateSuggestions"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Selection Criterias</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">10</item>
                <item name="opened" xsi:type="boolean">true</item>
            </item>
        </argument>
        <container name="product-block">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">ui/form/components/complex</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="label" xsi:type="string" translate="true">Number of products for kit</item>
                    <item name="additionalClasses" xsi:type="string">field-as-filter</item>
                </item>
            </argument>

            <field name="min_kit_products">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">From</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="sortOrder" xsi:type="number">10</item>
                        <item name="default" xsi:type="number">2</item>
                    </item>
                </argument>
            </field>

            <field name="max_kit_products">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">To</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="sortOrder" xsi:type="number">20</item>
                        <item name="default" xsi:type="number">5</item>
                    </item>
                </argument>
            </field>
        </container>

        <container name="order-block">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">ui/form/components/complex</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="label" xsi:type="string" translate="true">Number of orders</item>
                    <item name="additionalClasses" xsi:type="string">field-as-filter</item>
                </item>
            </argument>

            <field name="min_orders">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">From</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="sortOrder" xsi:type="number">30</item>
                    </item>
                </argument>
            </field>

            <field name="max_orders">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">To</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="sortOrder" xsi:type="number">40</item>
                    </item>
                </argument>
            </field>
        </container>

        <container name="price-block">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">ui/form/components/complex</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="label" xsi:type="string" translate="true">Kit price</item>
                    <item name="additionalClasses" xsi:type="string">field-as-filter</item>
                </item>
            </argument>

            <field name="min_kit_price">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">From</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="sortOrder" xsi:type="number">50</item>
                    </item>
                </argument>
            </field>

            <field name="max_kit_price">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">To</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="sortOrder" xsi:type="number">60</item>
                    </item>
                </argument>
            </field>
        </container>

        <container name="group-block">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">ui/form/components/complex</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="label" xsi:type="string" translate="true">Group by</item>
                    <item name="additionalClasses" xsi:type="string">field-as-filter</item>
                </item>
            </argument>

            <field name="same_customer">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">boolean</item>
                        <item name="label" xsi:type="string" translate="true">Same Customer</item>
                        <item name="formElement" xsi:type="string">checkbox</item>
                        <item name="sortOrder" xsi:type="number">80</item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="additionalClasses" xsi:type="string">filter-checkbox</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
            </field>
        </container>

        <container name="button-block">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">ui/form/components/complex</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="additionalClasses" xsi:type="string">button-block field-as-filter</item>
                    <item name="label" xsi:type="string" translate="true"></item>
                </item>
            </argument>

            <button name="generate_button">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="buttonClasses" xsi:type="string">generate-suggestions-button</item>
                        <item name="actions" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="targetName" xsi:type="string">suggestions</item>
                                <item name="actionName" xsi:type="string">generateSuggestions</item>
                            </item>
                        </item>
                    </item>
                </argument>
                <settings>
                    <displayAsLink>false</displayAsLink>
                    <title translate="true">Find Suggestions</title>
                </settings>
            </button>
        </container>
    </fieldset>

    <container name="suggestions" class="Mirasvit\ProductKit\Ui\Suggester\Form\Component\SuggestionsComponent">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
    </container>
</form>
