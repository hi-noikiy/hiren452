<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Mirasvit\SalesRule\Api\Data\RuleInterface" type="Mirasvit\SalesRule\Model\Rule"/>
    <preference for="Mirasvit\SalesRule\Api\Repository\RuleRepositoryInterface" type="Mirasvit\SalesRule\Repository\RuleRepository"/>
    <preference for="Mirasvit\SalesRule\Api\Repository\RuleTypeRepositoryInterface" type="Mirasvit\SalesRule\Repository\RuleTypeRepository"/>

    <type name="Mirasvit\SalesRule\Api\Repository\RuleTypeRepositoryInterface">
        <arguments>
            <argument name="pool" xsi:type="array">
                <item name="buyXGetY" xsi:type="object">Mirasvit\SalesRule\Rule\BuyXGetYType</item>
                <item name="buyXGetAmountY" xsi:type="object">Mirasvit\SalesRule\Rule\BuyXGetAmountYType</item>
                <item name="eachXmGetYm" xsi:type="object">Mirasvit\SalesRule\Rule\EachXmGetYmType</item>
                <item name="mostExpensive" xsi:type="object">Mirasvit\SalesRule\Rule\MostExpensiveType</item>
                <item name="mstCheapest" xsi:type="object">Mirasvit\SalesRule\Rule\MostCheapestType</item>
                <item name="exceptExpensive" xsi:type="object">Mirasvit\SalesRule\Rule\ExceptMostExpensiveType</item>
            </argument>
        </arguments>
    </type>


    <!--Entity Manager-->
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Mirasvit\SalesRule\Api\Data\RuleInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="const">Mirasvit\SalesRule\Api\Data\RuleInterface::TABLE_NAME</item>
                    <item name="identifierField" xsi:type="const">Mirasvit\SalesRule\Api\Data\RuleInterface::ID</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="Mirasvit\SalesRule\Api\Data\RuleInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\SalesRule\Model\Rule\Action\Discount\CalculatorFactory">
        <plugin name="mstSalesRuleCreateType" type="Mirasvit\SalesRule\Plugin\SalesRule\Model\Rule\Action\Discount\CalculatorFactory\CreateTypePlugin"/>
    </type>

    <type name="Magento\SalesRule\Model\Rule\Metadata\ValueProvider">
        <plugin name="mstSalesRuleRegisterRules" type="Mirasvit\SalesRule\Plugin\SalesRule\Model\Rule\Metadata\ValueProvider\RegisterRulesPlugin"/>
    </type>

    <type name="Magento\SalesRule\Model\Rule">
        <plugin name="mstSalesRuleSynchronize" type="Mirasvit\SalesRule\Plugin\SalesRule\Model\Rule\SynchronizePlugin"/>
    </type>

    <type name="Magento\Checkout\Controller\Cart\CouponPost">
        <plugin name="mstSalesRuleModifyMessage" type="Mirasvit\SalesRule\Plugin\Checkout\Controller\Cart\CouponPost\ModifyMessagePlugin" />
    </type>
</config>
