<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Plumrocket_Search::css/psearch.css"/>
    </head>
    <body>
        <referenceBlock name="top.search" >
            <action method="setTemplate" ifconfig="prsearch/general/enabled">
                <argument name="template" xsi:type="string">Plumrocket_Search::form.mini.phtml</argument>
            </action>
        </referenceBlock>
    </body>
    <body>
        <block class="Plumrocket\Search\Block\Tooltip" name="psearch.tooltip" template="Plumrocket_Search::tooltip.phtml" />
        <referenceContainer name="header-wrapper" remove="true" />
    </body>

</page>
