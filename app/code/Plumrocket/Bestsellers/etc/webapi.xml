<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/plumrocket/bestsellers/:period/count/:count/" method="GET">
        <service class="Plumrocket\Bestsellers\Api\ProductIdsProviderInterface" method="getByPeriod"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/plumrocket/bestsellers/:period/count/:count/:fallback" method="GET">
        <service class="Plumrocket\Bestsellers\Api\ProductIdsProviderInterface" method="getByPeriod"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/plumrocket/bestsellers/:period/category/:categoryId/count/:count/" method="GET">
        <service class="Plumrocket\Bestsellers\Api\ProductIdsProviderInterface" method="getByCategory"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/plumrocket/bestsellers/:period/category/:categoryId/count/:count/:fallback" method="GET">
        <service class="Plumrocket\Bestsellers\Api\ProductIdsProviderInterface" method="getByCategory"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
