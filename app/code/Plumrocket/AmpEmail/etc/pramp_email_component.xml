    <component id="bestsellers_carousel" class="Plumrocket\AmpEmail\Block\Component\Product\Bestsellers" ttl="86400">
        <label translate="true">Bestsellers Carousel</label>
        <description translate="true">Carousel of bestsellers Products</description>
        <parameters>
            <parameter name="period" xsi:type="select" required="true" visible="true">
                <label translate="true">Period</label>
                <options>
                    <option name="default" value="month" selected="true">
                        <label translate="true">Month</label>
                    </option>
                    <option name="item" value="week">
                        <label translate="true">Week</label>
                    </option>
                    <option name="item" value="year">
                        <label translate="true">Year</label>
                    </option>
                </options>
            </parameter>

            <parameter name="version" xsi:type="select" required="true" visible="false">
                <label translate="true">Version</label>
                <options>
                    <option name="v1" value="1" selected="true">
                        <label translate="true">Version 1</label>
                    </option>
                </options>
            </parameter>

            <parameter name="products_count" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of Products to Display</label>
                <value>10</value>
            </parameter>

            <parameter name="title" xsi:type="text" required="true" visible="true">
                <label translate="true">Title</label>
                <value>Recommended for You</value>
            </parameter>

            <parameter name="show_attributes" xsi:type="multiselect" required="true" visible="true">
                <label translate="true">Product attributes to show</label>
                <options>
                    <option name="name" value="name">
                        <label translate="true">Name</label>
                    </option>
                    <option name="image" value="image">
                        <label translate="true">Image</label>
                    </option>
                    <option name="price" value="price">
                        <label translate="true">Price</label>
                    </option>
                </options>
            </parameter>

            <parameter name="show_buttons" xsi:type="multiselect" required="true"  visible="true">
                <label translate="true">Buttons to show</label>
                <options>
                    <option name="add_to_cart" value="add_to_cart">
                        <label translate="true">Add to Cart</label>
                    </option>
                    <option name="add_to_wishlist" value="add_to_wishlist">
                        <label translate="true">Add to Wishlist</label>
                    </option>
                </options>
            </parameter>

            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="slides" value="component/:version/product/list/slides.phtml" selected="true">
                        <label translate="true">Slides of Products</label>
                    </option>
                    <option name="carousel" value="component/:version/product/list/carousel.phtml">
                        <label translate="true">Carousel of Products</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </component>
