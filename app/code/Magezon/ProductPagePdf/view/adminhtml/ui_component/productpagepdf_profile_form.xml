<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">productpagepdf_profile_form.productpagepdf_profile_form_data_source</item>
            <item name="deps" xsi:type="string">productpagepdf_profile_form.productpagepdf_profile_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Profile Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="config" xsi:type="array">
            <item name="namespace" xsi:type="string">productpagepdf_profile_form</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="delete" class="Magezon\ProductPagePdf\Block\Adminhtml\Profile\Edit\Button\Delete"/>
            <button name="save_and_apply" class="Magezon\ProductPagePdf\Block\Adminhtml\Profile\Edit\Button\SaveAndApply"/>
            <button name="save" class="Magezon\ProductPagePdf\Block\Adminhtml\Profile\Edit\Button\Save"/>
            <button name="back">
                <url path="*/*/"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
        </buttons>
    </settings>
    <dataSource name="productpagepdf_profile_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magezon\ProductPagePdf\Model\Profile\DataProvider</argument>
            <argument name="name" xsi:type="string">productpagepdf_profile_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">profile_id</argument>
            <argument name="requestFieldName" xsi:type="string">profile_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">General</item>
                <item name="dataScope" xsi:type="string">data</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>
        <settings>
            <dataScope>data</dataScope>
        </settings>
        <field name="profile_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                </item>
            </argument>
        </field>
        <field name="is_active">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Enable Profile</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Profile Name</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="from_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">From</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-date" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="to_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">To</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-date" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="auto_download">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Auto Download</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
        </field>
        <field name="button_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magezon\ProductPagePdf\Model\Source\DisplayStyle</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Button Type</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="string">icon_text</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                </item>
            </argument>
        </field>
        <field name="button_position">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magezon\ProductPagePdf\Model\Source\PositionDisplay</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Button Position</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="sortOrder" xsi:type="number">71</item>
                </item>
            </argument>
        </field>
        <field name="priority">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Priority</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="sortOrder" xsi:type="number">80</item>
                </item>
            </argument>
        </field>
        <field name="store_id" formElement="multiselect" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="sortOrder" xsi:type="number">90</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <tooltip>
                    <link>https://docs.magento.com/m2/ce/user_guide/configuration/scope.html</link>
                    <description>What is this?</description>
                </tooltip>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Cms\Ui\Component\Listing\Column\Cms\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="product_types" formElement="multiselect" sortOrder="100">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="value" xsi:type="string">all</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Type Product</label>
                <dataScope>product_types</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magezon\ProductPagePdf\Model\Source\TypeOptions"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="conditions">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Conditions</item>
                <item name="sortOrder" xsi:type="number">20</item>
                <item name="collapsible" xsi:type="boolean">true</item>
            </item>
        </argument>
        <container name="conditions_serialized_container" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">Magezon\Core\Block\Adminhtml\Tab\Conditions</argument>
            </htmlContent>
        </container>
    </fieldset>
    <fieldset name="builder">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">PDF Builder</item>
                <item name="sortOrder" xsi:type="number">30</item>
                <item name="dataScope" xsi:type="string">data</item>
                <item name="collapsible" xsi:type="boolean">true</item>
            </item>
        </argument>
        <field name="profile">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string"/>
                    <item name="class" xsi:type="string">\Magezon\ProductPagePdf\Ui\Component\Form\Element\Builder</item>
                    <item name="component" xsi:type="string">Magezon_ProductPagePdf/js/ui/form/element/builder</item>
                    <item name="elementTmpl" xsi:type="string">Magezon_ProductPagePdf/ui/form/element/builder</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-wide</item>
                    <item name="ajax_data" xsi:type="array">
                        <item name="load_builder_url" xsi:type="string">productpagepdf/builder/load</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="pdfsetting">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">PDF Setting</item>
                <item name="sortOrder" xsi:type="number">50</item>
                <item name="dataScope" xsi:type="string">data</item>
                <item name="collapsible" xsi:type="boolean">true</item>
            </item>
        </argument>
        <field name="pdf_orientation">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magezon\ProductPagePdf\Model\Source\Orientation</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Orientation</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="string">icon_text</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </field>
        <field name="pdf_page_size">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magezon\ProductPagePdf\Model\Source\PageSize</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Page Size</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="string">icon_text</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </field>
        <field name="pdf_margin_top">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Margin Top</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
            <settings>
                <dataScope>pdf_margin_top</dataScope>
            </settings>
        </field>
        <field name="pdf_margin_right">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Margin Right</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
            <settings>
                <dataScope>pdf_margin_right</dataScope>
            </settings>
        </field>
        <field name="pdf_margin_bottom">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Margin Bottom</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                </item>
            </argument>
            <settings>
                <dataScope>pdf_margin_bottom</dataScope>
            </settings>
        </field>
        <field name="pdf_margin_left">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Margin Left</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                </item>
            </argument>
            <settings>
                <dataScope>pdf_margin_left</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
