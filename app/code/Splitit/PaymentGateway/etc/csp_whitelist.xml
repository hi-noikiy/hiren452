<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="splitit-script" type="host">*.splitit.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="splitit-connect" type="host">*.splitit.com</value>
                <value id="sentry-io" type="host">*.sentry.io</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="splitit-image" type="host">*.splitit.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="splitit-frame" type="host">*.splitit.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="splitit-style" type="host">*.splitit.com</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="splitit-form" type="host">*.splitit.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
