<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="partialpayment" xsi:type="array">
                                    <item name="component"  xsi:type="string">Meetanshi_Partialpro/js/view/checkout/cart/totals/partialpayment</item>
                                    <item name="sortOrder" xsi:type="string">90</item>
                                    <item name="config" xsi:type="array">
                                         <item name="template" xsi:type="string">Meetanshi_Partialpro/checkout/cart/totals/partialpayment</item>
                                        <item name="title" xsi:type="string" translate="true">Partial Payment</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="checkout.cart.container">
            <block class="Meetanshi\Partialpro\Block\Cart" template="Meetanshi_Partialpro::cart.phtml" after="-" name="cart_partialpro" />
        </referenceContainer>
    </body>
</page>
