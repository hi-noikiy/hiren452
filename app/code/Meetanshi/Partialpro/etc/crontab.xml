<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="partialpayment_due" instance="Meetanshi\Partialpro\Cron\OverdueNotice" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="partialpayment_reminder" instance="Meetanshi\Partialpro\Cron\ReminderNotice" method="execute">
            <schedule>0 5 * * *</schedule>
        </job>
        <job name="partialpayment_autocapture" instance="Meetanshi\Partialpro\Cron\AutoCapture" method="execute">
            <schedule>0 6 * * *</schedule>
        </job>
    </group>
</config>