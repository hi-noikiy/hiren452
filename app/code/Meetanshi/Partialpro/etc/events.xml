<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_before">
        <observer name="partialpaymentfee" instance="Meetanshi\Partialpro\Observer\AddFeeToOrderObserver" />
    </event>
    <event name="checkout_type_multishipping_create_orders_single">
        <observer name="partialpaymentfeemultishipping" instance="Meetanshi\Partialpro\Observer\AddMultiFeeToOrderObserver" />
    </event>
    <event name="checkout_cart_product_add_after">
        <observer name="partialpayment_checkout_cart_product_add_after" instance="Meetanshi\Partialpro\Observer\CheckoutCartAddObserver" />
    </event>
    <event name="checkout_cart_update_item_complete">
        <observer name="partialpayment_checkout_cart_update_item_complete" instance="Meetanshi\Partialpro\Observer\CheckoutCartUpdateItem" />
    </event>
    <event name="checkout_cart_update_items_after">
        <observer name="partialpaymentupdate_item_before" instance="Meetanshi\Partialpro\Observer\UpdateCartItem" />
    </event>
    <event name="payment_method_is_active">
        <observer name="partialpayment_disable" instance="Meetanshi\Partialpro\Observer\PaymentMethodAvailable" />
    </event>
    <event name="payment_cart_collect_items_and_amounts">
        <observer name="partialpayment_to_paypal" instance="Meetanshi\Partialpro\Observer\PartialpaymentPaypal" />
    </event>
    <event name="adminhtml_sales_order_create_process_data_before">
        <observer name="adminhtml_sales_order_create_process_data_before" instance="Meetanshi\Partialpro\Observer\SalesOrderCreateProcessDataBefore"/>
    </event>
    <event name="sales_order_invoice_pay">
        <observer name="partialpayment_sales_order_invoice_pay" instance="Meetanshi\Partialpro\Observer\SalesOrderInvoicePay" />
    </event>
</config>